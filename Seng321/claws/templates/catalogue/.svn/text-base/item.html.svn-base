<a onclick="catalogController.viewItem({{ item.id }});" id='catalogueItem{{ item.id }}'>
	<div class='catalogueItem' style="background-image: url('{{ item.imageURL }}');" imagesrc="{{ item.imageURL }}" storeId="{{ item.id }}">
		<div class="overlay">
			<span style="font-weight:bold">Price:</span>
			<span class="itemPrice"> ${{ item.price }}</span></br>
			<span style="font-weight:bold">Description</span>
			<span class="itemDesc" style="font-size:12px; color:#EEE">{{item.description}}</span></br>
			{% if showActions %}
				<button class="button negative">Delete</button>
			{% endif %}
		</div>
		<span class="itemName">
			{{ item.name }}
		</span>	
	</div>
</a>