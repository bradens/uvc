h1 {
	font-size:30px;
}

span.label {
	float: left;
	display:inline-block;
}

input.formInputBox {
	font-weight: inherit;
	font-style: inherit;
	font-family: inherit;
	margin: 0px 2px 10px 10px;
	white-space: nowrap;
	overflow: hidden;
	width: 60%;
	-webkit-box-shadow: 0px 0px 3px 2px rgba(0,0,150,.15);
	box-shadow: 0px 0px 3px 2px rgba(0,0,150,.15);
	padding: 4px;
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	border: #999 thin solid;
	font-size: 14px;
	background-color: rgb(230, 230, 255);
	-moz-transition-property: background-color;
	-moz-transition-duration: .25s;
	transition: background-color .25s; 
	-webkit-transition: background-color .25s;
	line-height: 1.5;
}

